/* pages/todolist/todolist.wxss */

/* css  */
.todo{
    width:100%;
    height:100%;
    padding:20rpx; 
}
.title{
    width:340rpx;
    border-bottom:1rpx solid deeppink;
    text-align: center;
    height:96rpx;
    line-height: 96rpx;
    font-size: 28rpx;
    color:deeppink;
    font-weight: bold;
    margin:0 auto;
}

.form{
    margin-top:20rpx;
    width:100%;
    padding:20rpx;
}
.form-col{
    display: flex;
    align-items: center; 
    margin-top:20rpx;
}
.form-label {
    color:#999;
    font-size: 30rpx;
    margin-right:20rpx;
}
.form-input{
    flex:1;
}
.input{
    color:#666;
    font-size:32rpx;
    height:88rpx;
    padding:0 20rpx;
    line-height: 88rpx;
    box-sizing: border-box;
    display: block;
}
.btn-list{
    justify-content: space-between;
    margin-top:30rpx;
}
.btn{
    width:48%;
    height:92rpx;
    line-height: 90rpx;
    border:1rpx solid #ccc;
    color:#fff;
    border-radius: 10rpx;
    text-align: center;
}
.btn-success{
    background: #ff00ff;
}
.btn-danger{
    background-color:darkgoldenrod ;
}


.list{
    width:100%;
    padding: 20rpx 30rpx;
    border:1rpx solid #999;
    border-radius: 10rpx;
    margin-top:20rpx;
    margin-bottom:30rpx;
}
.item{
    margin-bottom:20rpx;
    border-bottom:1rpx solid #999;
    padding-bottom:20rpx;
}
.col{
    display: flex;
    justify-content: space-between;
    margin-bottom:10rpx;
    align-items: center;
}
.ltitle{
    color:#333;
    font-size: 30rpx;
}
.like{
    color:#ff00ff;
    font-size:30rpx;
}
.cbtn{
    margin-top:10rpx;
    font-size: 30rpx;
    width:80rpx;
    height:48rpx;
    border-radius: 10rpx;
    background: darkred;
    color:#fff;
    text-align: center;
    line-height: 48rpx;
}
.btn-primary{
    background: skyblue;
}