/* pages/find/find.wxss */

.find{
    width:100%;
    height:100%;
    padding:20rpx;
    box-sizing: border-box;
}
.title{
    width:100%;
    height:90rpx;
    /* background: seagreen; */
    border:1rpx solid seagreen;
    font-size: 28rpx;
    color:#123456;
    text-align: center;
    line-height: 90rpx;
    border-radius: 10rpx;
}

.submit{
    width:100%;
}
.sitem{
    width:100%;
    margin-top:20rpx;
}
.sinp{
    width:100%;
    border:1rpx solid #999;
    height:80rpx;
    padding:0 20rpx;
    box-sizing: border-box;
    border-radius: 10rpx;
}
.sbtn{
    width:100% !important;
    border:1rpx solid #999;
    background-color: seagreen;
    margin-top:20rpx;
    color:#fff;
}

.list{
    margin-top:20rpx;
    padding:20rpx;
    box-sizing: border-box;
    border:1px solid darkgoldenrod;
    border-radius: 10rpx;
}
.item {
    width:100%;
    padding-bottom:20rpx;
    border-bottom:1rpx solid #333;
    margin-top:20rpx;
}
.atitle{
    font-size: 30rpx;
    margin-top:10rpx;
}
.content{
    font-size: 24rpx;
    color:#666;
    margin-top:10rpx;
}

.alist{
    display: flex;
    margin-top:20rpx;
}
.action{
    margin-right:20rpx;
}
.del{
    color:#f50;
}

.update{
    color:#0f0;
}

.nodata{
    text-align: center;
    font-size: 35rpx;
    color:darkgoldenrod;
}