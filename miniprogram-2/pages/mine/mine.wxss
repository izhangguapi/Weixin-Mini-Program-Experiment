/* pages/mine/mine.wxss */

.mine{
    width:100%;
    height:100%;
   
}

.nologin{
    width:100%;
    height:100%;
    padding:20rpx; 
    display: flex;
    justify-content: center;
    align-items: center;
}

.startlogin{
    width:240rpx;
    height:240rpx;
    border:1rpx solid darkred;
    background: linear-gradient(orange,#ff00ff);
    border-radius: 50%;
    /* 居中 */
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    color:greenyellow;
}

.box{
    width:100%;
    height:100%;
    padding:20rpx; 
}

.top{
    padding:130rpx 0 30rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}
.avatar{
    width:120rpx;
    height:120rpx;
    border-radius: 50%;
}
.title{
    margin-top:20rpx;
    font-size: 40rpx;
    color:#999;
    display: flex;
    align-items: center;
}
.nickname{
    font-size: 50rpx;
    color:#ff00ff;
    margin-left:10rpx;
}

.list{
    margin-top:10rpx;
    width:100%;
    padding: 20rpx;
    border:1rpx solid #ababab;
    border-radius: 10rpx;
}
.row{
    display: flex;
    width:100%;
    justify-content: space-between;
    align-items: center;
    height:90rpx;
    border-bottom:1rpx solid #eee;
    margin-bottom: 20rpx;
}
.left{
    font-size: 30rpx;
    color:#888;
}
.right{
    font-size: 26rpx;
    color:#ababab;
}

.logout{
    margin-top:20rpx;
    width:100%;
    height:90rpx;
    border:1rpx solid #eee;
    border-radius: 10rpx;
    text-align: center;
    line-height: 90rpx;
    background: #ababab;
    color:#fff;
    font-size: 36rpx;
    margin-bottom: 20rpx;
}