/* pages/submit/submit.wxss */

.submit{
    width:100%;
    height:100%;
    padding:20rpx;
}

.title{
    height:90rpx;
    line-height: 90rpx;
    width:80%;
    border-bottom:1rpx solid skyblue;
    text-align: center;
    margin: 0 auto;
    font-size: 34rpx;
    color:#ff6464;

}

.form{
    width:100%;
    margin-top:40rpx;
    border-radius: 10rpx;
    padding:20rpx 20rpx 50rpx 20rpx;
    box-shadow: inset 5rpx 5rpx 30rpx #d9d9d9,
            inset -5rpx -5rpx 30rpx #ffffff;
}
.form-col{
    display: flex;
    margin-top:20rpx;
    align-items: center;
}
.form-label{
    padding-right:20rpx;
    color:#999;
    font-size: 30rpx;
}

.form-input{
    flex:1;
}


input{
    border:1rpx solid #eee;
    width:90%;
    padding:20rpx 20rpx;
    border-radius: 10rpx;
    color:#999;
    font-size: 36rpx;
}

textarea{
    border:1rpx solid #eee;
    width:90%;
    padding:14rpx 20rpx;
    border-radius: 10rpx;
    color:#999;
    font-size: 36rpx;
}

.radio{
    font-size: 30rpx;
    margin:0 10rpx;
}

.form-btn{
    width:100%;
    height:94rpx;
    text-align: center;
    line-height: 100rpx;
    border-radius: 14rpx;
    margin-top:40rpx;
    box-shadow:  5rpx 5rpx 30rpx #d9d9d9,
             -5rpx -5rpx 30rpx #ffffff;
}