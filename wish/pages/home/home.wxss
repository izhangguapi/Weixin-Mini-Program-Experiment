/* pages/home/home.wxss */

.home{
    width:100%;
    height:100%;
    padding: 120rpx 30rpx 30rpx 30rpx;
    position: relative;
}


.nav{
    width:100%;
    display: flex;
    position: fixed;
    top:30rpx;
    left:0;
    z-index:100;
}

.nav-item{
    flex:1;
    margin:0 26rpx;
    height:90rpx;
    line-height: 90rpx;
    text-align: center;
    font-size: 34rpx;
    border-radius: 45rpx;
    background: #ffffff;
    box-shadow:  5rpx 5rpx 30rpx #d9d9d9,
             -5rpx -5rpx 30rpx #ffffff;
}

.nav-active{
    background: #ffffff;
    box-shadow: inset 5rpx 5rpx 30rpx #d9d9d9,
            inset -5rpx -5rpx 30rpx #ffffff;
}

.home-box{
    width:100%;
    margin-top:20rpx;
    height:100%;
    padding:20rpx 0; 
}
.scroll{
    padding:20rpx 0; 
    height:100%;
    overflow: scroll;
}
.flex{
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.nitem{
    width:98%;
    padding:20rpx;
    box-shadow: 0  0 5rpx #999 ;
    border-radius: 15rpx;
    box-sizing: border-box;
    margin: 20rpx auto 30rpx;
    box-shadow: inset 5rpx 5rpx 30rpx #d9d9d9,
            inset -5rpx -5rpx 30rpx #ffffff;
}

.title{
    color:#ff00ff;
    font-size: 30rpx;
}
.hot{
    font-size: 26rpx;
    color:#777;
    display: flex;
    align-items: center;
}
.hotimg{
    width:30rpx;
    height:30rpx;
    margin:0 10rpx;
    
}

.desc{
    margin-top:10rpx;
    color:orange;
    font-size: 36rpx;
    padding:10rpx 0 10rpx 0;
    border-bottom: 1rpx solid #eee;
}

.col{
    margin-top:20rpx
}

.likeimg{
    width:30rpx;
    height:30rpx;
    margin-right:10rpx;
}
.like{
    display: flex;
    align-items: center;
    font-size: 30rpx;
    color:#123456;
}

.info{
    display: flex;
    align-items: center;
    font-size: 30rpx;
    color:deeppink;
}
.avatar{
    width:50rpx;
    height:50rpx;
    border-radius: 50%;
    margin-right:10rpx
}

.time{
    font-size: 24rpx;
    color:#999;
}

.text{
    font-size:26rpx;
    color:#888;
}