/* pages/mine/mine.wxss */

.mine{
    width:100%;
    height:100%;
}

.nologin{
    width:100%;
    height:100%;
    padding:20rpx; 
    display: flex;
    justify-content: center;
    align-items: center;
}

.startlogin{
    width:360rpx;
    height:360rpx;
    background: #ffffff;
    box-shadow:  20px 20px 60px #d9d9d9,
                -20px -20px 60px #ffffff;
    border-radius: 50%;
    /* 居中 */
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.box{
    width:100%;
    height:100%;
    padding:20rpx; 
}

.top{
    padding:130rpx 0 30rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}
.avatar{
    width:120rpx;
    height:120rpx;
    border-radius: 50%;
}
.title{
    margin-top:20rpx;
    font-size: 40rpx;
    color:#999;
    display: flex;
    align-items: center;
}
.nickname{
    font-size: 50rpx;
    color:#ff6464;
    margin-left:10rpx;
}

.list{
    margin-top:10rpx;
    width:100%;
    padding: 20rpx;
    border-radius: 50rpx;
    background: #ffffff;
    box-shadow: inset 5rpx 5rpx 30rpx #d9d9d9,
                inset -5rpx -5rpx 30rpx #ffffff;
}
.row{
    display: flex;
    width:100%;
    justify-content: space-between;
    align-items: center;
    height:90rpx;
    border-bottom:1rpx solid #eee;
    margin-bottom: 20rpx;
}
.left{
    font-size: 30rpx;
    color:#888;
}
.right{
    font-size: 26rpx;
    color:#ababab;
}

.logout{
    margin-top:50rpx;
    height:90rpx;
    line-height: 90rpx;
    border-radius: 50rpx;
    background: #ffffff;
box-shadow:  5rpx 5rpx 30rpx #d9d9d9,
             -5rpx -5rpx 30rpx #ffffff;
    text-align: center;
    font-size: 36rpx;
    font-weight: 500;
    color: #000;
}